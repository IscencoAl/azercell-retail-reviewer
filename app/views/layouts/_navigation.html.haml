.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{:type => "button", :data => {:toggle => "collapse", :target => "#bs-example-navbar-collapse-1"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => users_path} Retail Reviewer

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => '#'}= t('views.navigation.report_structure')

        %li
          %a{:href => '#'}= t('views.navigation.reports')

        %li.dropdown
          %a.dropdown-toggle{:href => "javascript:;", :data => {:toggle => 'dropdown'}}
            = t('views.navigation.retail')
            %span.caret
          %ul.dropdown-menu{:role => "dropdown"}
            %li
              %a{:href => '#'}= t('views.navigation.dealers')
            %li
              %a{:href => '#'}= t('views.navigation.shops')

        %li.dropdown
          %a.dropdown-toggle{:href => "javascript:;", :data => {:toggle => 'dropdown'}}
            = t('views.navigation.places')
            %span.caret
          %ul.dropdown-menu{:role => "dropdown"}
            %li
              %a{:href => regions_path}= t('views.navigation.regions')
            %li
              %a{:href => cities_path}= t('views.navigation.cities')

      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => users_path}= t('views.navigation.users')

        %li
          %a{:href => destroy_user_session_path, :data => {:method => 'delete'}}= t('views.navigation.log_out')

        %li.dropdown
          %a.dropdown-toggle{:href => "javascript:;", :data => {:toggle => 'dropdown'}}
            = I18n.locale
            %span.caret
          %ul.dropdown-menu{:role => "dropdown", :style => 'min-width: 0;'}
            - I18n.available_locales.each do |l|
              %li
                = link_to l, :locale => l