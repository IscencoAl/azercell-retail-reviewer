%h2.text-center= t('views.regions.list')
%br

.row
  .col-lg-offset-1.col-lg-10
    .panel.panel-default
      .table-responsive
        %table.table.table-condensed.table-striped.table-vcentered
          %thead
            %tr
              %th= t('activerecord.attributes.region.name')
              %th
                .btn-toolbar.text-right
                  = link_to t('views.common.add'), new_region_path, :class =>'btn btn-sm btn-primary'

          %tbody
            - @regions.each do |region|
              %tr
                %td= region.name
                %td.text-right
                  = link_to t('views.common.edit'), edit_region_path(region), :class => 'btn btn-default btn-sm'
                  = link_to t('views.common.delete'), region, :method => :delete, :class => 'btn btn-danger btn-sm', :data => { :confirm => t('views.common.confirm') }






