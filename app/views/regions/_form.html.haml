= form_for(@region , :html => {:class => 'form-horizontal'}) do |f|
  - if @region.errors.any?
    #error_explanation
      %h2= "#{pluralize(@region.errors.count, "error")} prohibited this region from being saved:"
      %ul
        - @region.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, :class => "col-sm-2 control-label"
    .col-sm-8
      = f.text_field :name, :class => "form-control", :type =>"text"
  .form-group
    .col-sm-12.text-center
      = f.submit 'Save', :class => "btn btn-sm btn-primary"
      %a.btn.btn-sm.btn-default{:href=> regions_path} Cancel
