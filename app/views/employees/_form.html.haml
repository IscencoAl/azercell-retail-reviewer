= simple_form_for @employee, :html => {:class => 'form-horizontal', :role => 'form'} do |f|

  = f.input :name
  = f.input :phone
  = f.input :email
  = f.association :shop
  = f.association :employee_workposition

  .btn-toolbar.text-center
    = f.button :submit, t('views.common.save')
    %a.btn.btn-default{:href => employees_path}= t('views.common.cancel')