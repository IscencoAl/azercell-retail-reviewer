= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp"
= javascript_include_tag "maps/shop_show"

= stylesheet_link_tag "shops"

.well.well-sm
  .row
    .col-sm-4
      #map_canvas.map-container{:data => {:lat => @shop.latitude, :lng => @shop.longitude}}

    .col-sm-4
      %table#general-info.table.table-condensed.table-striped
        %tbody
          %tr
            %td= t('activerecord.attributes.shop.region')
            %td= link_to @shop.region.name, @shop.region
          %tr
            %td= t('activerecord.attributes.shop.city')
            %td= link_to @shop.city.name, @shop.city
          %tr
            %td= t('activerecord.attributes.shop.address')
            %td= @shop.address
          %tr
            %td= t('activerecord.attributes.shop.type')
            %td= @shop.type.name
          %tr
            %td= t('activerecord.attributes.shop.square_footage')
            %td= @shop.square_footage || '-'
          %tr
            %td= t('activerecord.attributes.shop.dealer')
            %td= link_to @shop.dealer.name, @shop.dealer
          %tr
            %td= t('activerecord.attributes.shop.user')
            %td= link_to @shop.user.full_name, @shop.user
          %tr
            %td= t('activerecord.attributes.shop.score')
            %td= @shop.score ? link_to(@shop.score, @shop.last_report) : '-'

    .col-sm-4
      = render 'shop_photos/slideshow', :shop => @shop

= render 'reports'