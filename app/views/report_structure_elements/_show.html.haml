.element.div-tr

  .div-td.name= @element.name

  .div-td.type= @element.type.name

  .div-td.weight= @element.weight

  .div-td.shop-types
    .btn-toolbar
      .btn-group.btn-group-sm{:data => {:toggle => 'buttons'}}
        - ShopType.all.each do |t|
          %a.btn.btn-default{:href => t.abbreviation, :class => ("btn-primary" if @element.shop_types.include?(t.abbreviation)), :disabled => 'disabled'}= t.abbreviation

  .div-td.controls.text-right
    %a.btn.btn-xs.btn-default{:href => edit_report_structure_element_path(@element), :data => {:editelement => true}}
      %span.glyphicon.glyphicon-edit

    %a.btn.btn-xs.btn-default{:href => report_structure_element_path(@element), :data => {:deleteelement => true, :confirmation => t('views.common.confirm')}}
      %span.glyphicon.glyphicon-remove