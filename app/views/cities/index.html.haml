%h2.text-center= t('views.cities.list')
%br

=render 'filter'

.row
  .col-lg-offset-1.col-lg-10
    .panel.panel-default
      .table-responsive
        %table.table.table-condensed.table-striped.table-vcentered
          %thead
            %tr
              %th= t('activerecord.attributes.city.name')
              %th= t('activerecord.attributes.city.region')
              %th.text-right
                - if can?(:create, City)
                  = link_to t('views.common.add'), new_city_path, :class =>'btn btn-xs btn-primary'

          %tbody
            -if @cities.any?
              - @cities.each do |city|
                %tr
                  %td= city.name
                  %td= city.region ? city.region.name : '-'
                  %td.text-right
                    .btn-toolbar
                      -if can?(:update, city)
                        = link_to t('views.common.edit'), edit_city_path(city), :class => 'btn btn-xs btn-primary'
                      -if can?(:destroy, city)
                        = link_to t('views.common.delete'), city, :method => :delete, :class => 'btn btn-danger btn-xs', :data => { :confirm => t('views.common.confirm') }
            -else
              %tr
                %td{:colspan => 3}
                  %h4.text-center= t('views.common.empty')






