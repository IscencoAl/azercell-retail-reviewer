= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp'
= javascript_include_tag 'http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer.js'
= javascript_include_tag 'maps/shops'

%h2.text-center= @city.name
%br

.panel.panel-default
  .panel-body
    .row
      .col-md-6
        %div#map_canvas.map-container-lg{:data => {:mapinfo => map_info_shops_path({:filter => {:city => @city}})}}
      .col-md-6
        .panel.panel-default
          = render 'shops/list', :shops => policy_scope(@city.shops), :max_height => 450